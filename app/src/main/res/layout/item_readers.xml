<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/tv_fullName"
        style="@style/TitleRecyclerView"
        tools:text="Cassandra Stone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/tv_book_borrowings_title"
        style="@style/SmallTextRecyclerView"
        android:text="@string/book_borrowings_times"
        app:layout_constraintTop_toBottomOf="@+id/tv_fullName"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/tv_book_borrowings"
        style="@style/SmallTextRecyclerView"
        tools:text="25"
        android:layout_marginStart="@dimen/small_margin"
        app:layout_constraintTop_toBottomOf="@+id/tv_fullName"
        app:layout_constraintStart_toEndOf="@id/tv_book_borrowings_title"/>

    <View
        style="@style/Separator"
        app:layout_constraintTop_toBottomOf="@+id/tv_book_borrowings_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>