<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.HomeLibrary" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/gold</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/gold</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
        <!-- Customize your theme here. -->
    </style>


    <!-- TEXT VIEW -->

    <style name="SmallTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/small_text</item>
        <item name="android:textColor">@color/grey</item>
        <item name="android:layout_marginStart">@dimen/side_large_margin</item>
        <item name="android:layout_marginTop">@dimen/normal_margin</item>
    </style>

    <style name="NormalTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/middle_text</item>
        <item name="android:textColor">@color/grey</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_marginTop">@dimen/normal_margin</item>
    </style>

    <style name="TitleRecyclerView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/normal_text</item>
        <item name="android:textColor">@color/grey</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginTop">@dimen/small_normal_margin</item>
        <item name="android:layout_marginStart">@dimen/side_normal_margin</item>

    </style>

    <style name="SmallTextRecyclerView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/small_text</item>
        <item name="android:textColor">@color/grey</item>
        <item name="android:layout_marginTop">@dimen/small_normal_margin</item>
        <item name="android:layout_marginStart">@dimen/side_normal_margin</item>

    </style>

    <style name="EmptyFragmentText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/normal_text</item>
        <item name="android:textColor">@color/silver</item>
        <item name="android:text">@string/empty</item>
        <item name="android:layout_centerInParent">true</item>
    </style>


    <!--EDIT TEXT STYLE-->

    <style name="LargeTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/et_corner</item>
        <item name="boxCornerRadiusBottomStart">@dimen/et_corner</item>
        <item name="boxCornerRadiusTopEnd">@dimen/et_corner</item>
        <item name="boxCornerRadiusTopStart">@dimen/et_corner</item>
        <item name="android:layout_marginStart">@dimen/side_normal_margin</item>
        <item name="android:layout_marginEnd">@dimen/side_normal_margin</item>
        <item name="android:layout_marginTop">@dimen/small_margin</item>
        <item name="boxStrokeColor">@color/gold</item>
        <item name="endIconMode">clear_text</item>
        <item name="android:textColor">@color/grey</item>
        <item name="errorEnabled">true</item>
    </style>

    <style name="MiddleTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/et_corner</item>
        <item name="boxCornerRadiusBottomStart">@dimen/et_corner</item>
        <item name="boxCornerRadiusTopEnd">@dimen/et_corner</item>
        <item name="boxCornerRadiusTopStart">@dimen/et_corner</item>
        <item name="android:layout_marginStart">@dimen/side_normal_margin</item>
        <item name="android:layout_marginEnd">100dp</item>
        <item name="android:layout_marginTop">@dimen/small_margin</item>
        <item name="boxStrokeColor">@color/gold</item>
        <item name="endIconMode">clear_text</item>
        <item name="android:textColor">@color/grey</item>
        <item name="errorEnabled">true</item>
    </style>

    <style name="DateTextInputLayout" parent="LargeTextInputLayout">
        <item name="helperTextEnabled">true</item>
        <item name="helperText">@string/format_date_input</item>
    </style>


    <!-- BUTTON -->

    <style name="ButtonGeneral">
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="cornerRadius">@dimen/btn_corner</item>
        <item name="backgroundTint">@color/gold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/middle_text</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginStart">60dp</item>
        <item name="android:layout_marginEnd">60dp</item>
    </style>

    <style name="ButtonSmall">
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_width">160dp</item>
        <item name="cornerRadius">@dimen/btn_corner</item>
        <item name="backgroundTint">@color/gold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/small_text</item>
        <item name="android:layout_marginEnd">@dimen/side_normal_margin</item>
        <item name="android:layout_marginTop">@dimen/small_normal_margin</item>
    </style>

    <style name="RoundButton">
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_width">40dp</item>
        <item name="cornerRadius">@dimen/btn_corner</item>
        <item name="backgroundTint">@color/gold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:text">@string/plus</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginStart">-90dp</item>
        <item name="android:layout_marginTop">14dp</item>
    </style>


    <!--SEPARATOR-->
    <style name="Separator">
        <item name="android:layout_height">0.5dp</item>
        <item name="android:layout_marginTop">@dimen/small_margin</item>
        <item name="android:layout_marginStart">@dimen/normal_margin</item>
        <item name="android:layout_marginEnd">@dimen/normal_margin</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/silver</item>
    </style>


    <!-- PROGRESS BAR-->
    <style name="ProgressBar">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:indeterminate">true</item>
        <item name="android:indeterminateTintMode">src_atop</item>
        <item name="android:indeterminateTint">@color/gold</item>
    </style>

</resources>